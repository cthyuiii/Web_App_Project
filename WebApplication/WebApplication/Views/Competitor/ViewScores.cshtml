@model IEnumerable<WebApplication.Models.CriteriaScoreViewModel>

@{
    ViewData["Title"] = "View Scores";
}

<h4 class="PageTitle">Criteria Scores for @ViewData["CompetitionName"]</h4>

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewStaff" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Criterion Name</th>
                    <th>Score</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CriteriaName</td>
                        <td>@item.Score</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div>
        <p>Would you like to <a asp-action="SubmitAppeal" asp-controller="Competitor" asp-route-CompetitionId="@ViewData["CompetitionId"]">Submit An Appeal</a>?</p>
    </div>
}
else
{
    <span style="color:red">There are no scores for this competition yet!</span>
    <br />
    <div>
        <a asp-action="ViewJoinedCompetitions">Back to list of joined competitions</a>
    </div>
}