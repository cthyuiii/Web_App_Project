@model WebApplication.Models.Comment

@{
    ViewData["Title"] = "Create";
}

<h4 class="PageTitle">Add Comments</h4>
<hr />
<form asp-action="Create">
    <fieldset class="FormContent">
        <div class="form-group row">
            <label asp-for="Description" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </div>
        <div>
            <a asp-action="ViewComment" asp-route-id=@Model.CompetitionID>Back to List</a>
        </div>
    </fieldset>
</form>

