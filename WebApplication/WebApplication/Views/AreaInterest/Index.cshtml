<!DOCTYPE html>

<html>
<head>
    <!-- Use Unicode character encoding - multi-language compatibility -->
    <meta charset="utf-8" />

    <!-- Set the initial view zooming scale for mobile device -->
    <meta name="viewport" content="width = device-width, initial-scale = 1" />

    <title>Judge.IO - Area of Interests</title>

    <!-- Reference to customized styling for this website -->
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/css/Site.css">
</head>
<body>
    <div class="table-responsive">
        <table id="viewAreaInterest" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>AreaInterest ID</th>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.areaofinterestnameList)
                {
                    string selectedRow = "";
                    if (ViewData["selectedAreaInterest"].ToString()
                     == item.AreaInterestID.ToString())
                    {
                        // Highlight the selected row
                        selectedRow = "class='table-primary'";
                    }
                    <tr @Html.Raw(selectedRow)>
                        <td>@item.AreaInterestID.ToString()</td>
                        <td>@item.Name</td> 
                        <td>
                            <a asp-action="Create" asp-controller="Competition"
                               asp-route-areainterestid="@item.AreaInterestID">Create Competition</a> |
                            <br />
                            <a asp-action="Delete" asp-controller="AreaInterest"
                               asp-route-id="@item.AreaInterestID">Delete Area of Interest</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
