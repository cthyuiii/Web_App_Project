@model IEnumerable<WebApplication.Models.CompetitionSubmission>

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewCompetitionSubmission" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>File Name</th>
                    <th>File Upload Time</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CompetitorName</td>
                        <td>@item.FileSubmitted</td>
                        <td>@item.DateTimeFileUpload</td>
                        <td>
                            @if (!(item.FileSubmitted is null))
                            {
                                <a asp-action="ViewFile" asp-controller="CompetitionSubmission"
                                   asp-route-competitorid="@item.CompetitorID"
                                   asp-route-competitionid="@item.CompetitionID">File</a>
                            }
                            <br />
                            <a asp-action="Vote" asp-controller="CompetitionSubmission"
                               asp-route-competitorid="@item.CompetitorID"
                               asp-route-competitionid="@item.CompetitionID">Vote</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div>
        <a asp-action="ViewCompetition">Back to List</a>
    </div>
}
else
{
    <span style="color:red">No record found!</span>
    <div>
        <a asp-action="ViewCompetition">Back to List</a>
    </div>
}
