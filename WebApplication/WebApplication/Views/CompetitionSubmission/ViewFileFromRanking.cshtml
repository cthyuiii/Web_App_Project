@model WebApplication.Models.Files

@{
    ViewData["Title"] = "ViewFileFromRanking";
}

<html>
<head>
    <!-- Use Unicode character encoding - multi-language compatibility -->
    <meta charset="utf-8" />

    <!-- Set the initial view zooming scale for mobile device -->
    <meta name="viewport" content="width = device-width, initial-scale = 1" />

    <title>Judge.IO - View File</title>

    <!-- Reference to customized styling for this website -->
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/css/Site.css">
</head>
<body>
    <!-- Title -->
    <div class="align-content-md-center">
        <p style="font-size: 100px; color: #311DDD; text-align:center">View File</p>
    </div>
    <div>
        @if (Model.Extension == "jpg")
        {
            <img src="~/CompetitionWork/@Model.FileName" />
        }
        else if (Model.Extension == "mp4")
        {
            <video width="400" controls>
                <source src="~/CompetitionWork/@Model.FileName" type="video/mp4" />
            </video>
        }
        else if (Model.Extension == "pdf")
        {
            <a href="~/CompetitionWork/@Model.FileName">PDF File</a>
        }
        else
        {
            <p>No file detected!</p>
        }
    </div>
    <div>
        <a asp-action="Rankings" asp-route-id="@Model.CompetitionID"
           asp-controller="Competition">Back to List</a>
    </div>
</body>
</html>
