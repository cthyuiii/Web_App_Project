@model WebApplication.Models.Judge

@{
    ViewData["Title"] = "CreateJudge";
}

<h1>Create Judge Profile</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateJudge">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="JudgeName" class="control-label"></label>
                <input asp-for="JudgeName" class="form-control" />
                <span asp-validation-for="JudgeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salutation" class="control-label"></label>
                <select asp-for="Salutation"
                        asp-items="@ViewData["Salutations"]
 as List<SelectListItem>"
                        class="form-control">
                </select>

                <span asp-validation-for="Salutation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AreaInterestID" class="control-label"></label>
                <select asp-for="AreaInterestID"
                        asp-items="@ViewData["AreaInterest"]
 as List<SelectListItem>"
                        class="form-control">
                </select>
                <span asp-validation-for="AreaInterestID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailAddr" class="control-label"></label>
                <input asp-for="EmailAddr" class="form-control" />
                <span asp-validation-for="EmailAddr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="myButton" />
            </div>
            <span style="color:green;">@TempData["SuccessMessage"]</span>
        </form>
    </div>
</div>

<div>
    <a asp-action="Login"
       asp-controller="Home">Login with new Judge profile</a>
</div>
