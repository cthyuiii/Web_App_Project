@{
    ViewData["Title"] = "Contact Us";
}

<!DOCTYPE html>

<html>
<head>
    <!-- Use Unicode character encoding - multi-language compatibility -->
    <meta charset="utf-8" />

    <!-- Set the initial view zooming scale for mobile device -->
    <meta name="viewport" content="width = device-width, initial-scale = 1" />

    <title>Judge.IO - Contact Us</title>

    <!-- Reference to customized styling for this website -->
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/css/Site.css">
</head>
<body>
    <!-- Main Container -->
    <div class="flex-container">
        <!-- Title -->
        <div class="align-content-md-center">
            <p style="font-size: 100px; color: #311DDD; text-align:center">Contact Us</p>
        </div>
        <!-- Login Form -->
        <div style="text-align: center">
            <form method="post" action="~/Home/ContactUsLogin" id="contactForm">
                <fieldset class="loginFieldset">
                    <label for="txtName">Enter Your Name:</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <input type="text" name="txtName" id="txtName" required /><br />
                    <label for="txtEmail">Enter Your Email Address:</label>&nbsp;&nbsp;
                    <input type="email" name="txtEmail" id="txtEmail" required /><br />
                    <label for="phoneNo">Enter Your Phone Number:</label>
                    <input type="number" name="phoneNo" id="phoneNo" required /><br />
                    <label for="msg">Message:</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <textarea name="msg" form="contactForm"></textarea><br />
                    <input type="submit" id="btnContact" class="myButton" value="Submit" />
                </fieldset>
            </form>
        </div>
    </div>
</body>
</html>



